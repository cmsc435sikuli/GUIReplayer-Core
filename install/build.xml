<project name="GUIReplayer-Core" basedir=".." default="help">

  <property name="module" value="GUIReplayer-Core" />
  <import file="../../shared/ant/properties.xml" />

  <property name="dependency_list" value="GUITARModel-Core" />
  <path id="dependency_list.buildfiles">
    <fileset file="${root.dir}/GUITARModel-Core/install/build.xml" />
  </path>

  <path id="classpath">
    <fileset file="${apache-cli}" />
    <fileset file="${log4j}" />
    <fileset file="${jemmy}" />
  </path>

  <import file="../../shared/ant/default.xml" />

  <target name="build" depends="common.build">
    <!-- Copy over gripper launcher program -->
    <copy file="${root.dir}/guitar/launchers/greplayer.template"
          tofile="${root.dir}/greplayer" failonerror="false" />
    <chmod file="${root.dir}/greplayer" perm="775" />
  </target>

</project>
